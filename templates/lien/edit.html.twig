{% extends 'base.html.twig' %}

{% block title %}Modifier le lien - {{ lien.typeLien.nom }}{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Modifier le lien</h1>
        <div class="btn-group">
            <a href="{{ path('app_lien_show', {'id': lien.id}) }}" class="btn btn-secondary">
                <i class="fas fa-eye"></i> Voir
            </a>
            <a href="{{ path('app_lien_index') }}" class="btn btn-secondary">
                <i class="fas fa-list"></i> Liste
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    {{ form_start(form) }}
                        <div class="row">
                            <div class="col-md-6">
                                {{ form_row(form.personne1) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.personne2) }}
                            </div>
                        </div>
                        
                        {{ form_row(form.typeLien) }}
                        
                        <div class="row">
                            <div class="col-md-6">
                                {{ form_row(form.dateDebut) }}
                            </div>
                            <div class="col-md-6">
                                {{ form_row(form.dateFin) }}
                            </div>
                        </div>
                        
                        {{ form_row(form.notes) }}
                        
                        <div class="d-flex justify-content-between">
                            <a href="{{ path('app_lien_index') }}" class="btn btn-secondary">Annuler</a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Mettre à jour
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5>Lien actuel</h5>
                </div>
                <div class="card-body">
                    <p><strong>{{ lien.personne1.fullName }}</strong></p>
                    <p class="text-center">
                        <span class="badge bg-primary">{{ lien.typeLien.nom }}</span>
                    </p>
                    <p><strong>{{ lien.personne2.fullName }}</strong></p>
                    
                    {% if lien.dateDebut or lien.dateFin %}
                        <hr>
                        <p class="small">
                            <strong>Période :</strong><br>
                            {% if lien.dateDebut %}
                                Du {{ lien.dateDebut|date('d/m/Y') }}
                            {% else %}
                                Depuis toujours
                            {% endif %}
                            {% if lien.dateFin %}
                                au {{ lien.dateFin|date('d/m/Y') }}
                            {% else %}
                                à aujourd'hui
                            {% endif %}
                        </p>
                    {% endif %}
                    
                    {% if lien.notes %}
                        <hr>
                        <p class="small">
                            <strong>Notes :</strong><br>
                            {{ lien.notes|nl2br }}
                        </p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}