{% extends 'base.html.twig' %}

{% block title %}Modifier {{ person.fullName }}{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Modifier {{ person.fullName }}</h1>
        <div class="btn-group">
            <a href="{{ path('app_person_show', {'id': person.id}) }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Retour aux détails
            </a>
            <a href="{{ path('app_person_index') }}" class="btn btn-secondary">
                <i class="fas fa-list"></i> Retour à la liste
            </a>
        </div>
    </div>

    <!-- Formulaire principal de modification -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="card-title mb-0">
                <i class="fas fa-user-edit"></i> Informations personnelles
            </h5>
        </div>
        <div class="card-body">
            {{ include('person/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
        </div>
    </div>

    <!-- Section d'ajout rapide de liens -->
    <div class="card">
        <div class="card-header">
            <h5 class="card-title mb-0">
                <i class="fas fa-link"></i> Gestion des liens familiaux
            </h5>
        </div>
        <div class="card-body">
            <div class="row">
                <!-- Ajout rapide -->
                <div class="col-md-6">
                    <h6 class="text-primary mb-3">
                        <i class="fas fa-plus-circle"></i> Ajouter un nouveau lien
                    </h6>
                    {{ form_start(quickLienForm, {'attr': {'class': 'quick-lien-form'}}) }}
                        <div class="row">
                            <div class="col-12 mb-3">
                                {{ form_label(quickLienForm.typeLien) }}
                                {{ form_widget(quickLienForm.typeLien) }}
                                {{ form_errors(quickLienForm.typeLien) }}
                            </div>
                            <div class="col-12 mb-3">
                                {{ form_label(quickLienForm.personne2) }}
                                {{ form_widget(quickLienForm.personne2) }}
                                {{ form_errors(quickLienForm.personne2) }}
                            </div>
                            <div class="col-12">
                                <button type="submit" class="btn btn-success">
                                    <i class="fas fa-plus"></i> Ajouter le lien
                                </button>
                            </div>
                        </div>
                    {{ form_end(quickLienForm) }}
                </div>
                
                <!-- Liens existants -->
                <div class="col-md-6">
                    <h6 class="text-primary mb-3">
                        <i class="fas fa-list"></i> Liens existants
                    </h6>
                    {% set liens = person.tousLesLiens %}
                    {% if liens|length > 0 %}
                        <div class="list-group">
                            {% for lien in liens %}
                                <div class="list-group-item">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <small class="text-primary fw-bold">{{ lien.typeLien.nom }}</small><br>
                                            <span class="text-dark">{{ lien.getAutrePersonne(person).fullName }}</span>
                                        </div>
                                        <a href="{{ path('app_lien_edit', {'id': lien.id}) }}" 
                                           class="btn btn-outline-secondary btn-sm" 
                                           title="Modifier ce lien">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% else %}
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> Aucun lien familial défini pour le moment.
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %} 