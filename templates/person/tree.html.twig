{% extends 'base.html.twig' %}

{% block title %}Arbre g√©n√©alogique - {{ person.fullName }}{% endblock %}

{% block stylesheets %}
    <style>
        .tree-container {
            width: 100%;
            min-height: 800px;
            padding: 40px 20px;
            position: relative;
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            border-radius: 15px;
            overflow: hidden;
        }
        
        .tree {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 80px;
            position: relative;
            z-index: 2;
        }
        
        .tree-level {
            display: flex;
            justify-content: center;
            gap: 40px;
            width: 100%;
            position: relative;
        }
        
        .person-card {
            background: linear-gradient(145deg, #ffffff 0%, #f8f9fa 100%);
            border: 2px solid #e9ecef;
            border-radius: 20px;
            padding: 20px;
            width: 280px;
            text-align: center;
            box-shadow: 
                0 8px 32px rgba(0,0,0,0.1),
                0 2px 8px rgba(0,0,0,0.05);
            position: relative;
            z-index: 10;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            backdrop-filter: blur(10px);
        }
        
        .person-card:hover {
            transform: translateY(-5px) scale(1.02);
            box-shadow: 
                0 20px 40px rgba(0,0,0,0.15),
                0 8px 16px rgba(0,0,0,0.1);
            border-color: #2196f3;
        }
        
        .person-card.current {
            background: linear-gradient(145deg, #e3f2fd 0%, #bbdefb 100%);
            border-color: #2196f3;
            border-width: 3px;
            box-shadow: 
                0 12px 40px rgba(33, 150, 243, 0.3),
                0 4px 12px rgba(33, 150, 243, 0.2);
        }
        
        .person-card.current::before {
            content: 'üëë';
            position: absolute;
            top: -15px;
            right: -15px;
            font-size: 2rem;
            z-index: 11;
            animation: bounce 2s infinite;
        }
        
        @keyframes bounce {
            0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
            40% { transform: translateY(-10px); }
            60% { transform: translateY(-5px); }
        }
        
        .person-photo {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            object-fit: cover;
            margin-bottom: 15px;
            border: 4px solid #fff;
            box-shadow: 0 4px 20px rgba(0,0,0,0.15);
            transition: all 0.3s ease;
        }
        
        .person-card:hover .person-photo {
            transform: scale(1.05);
            box-shadow: 0 8px 30px rgba(0,0,0,0.2);
        }
        
        .person-name {
            font-size: 1.3em;
            font-weight: 700;
            margin-bottom: 8px;
            color: #2c3e50;
            text-shadow: 0 1px 2px rgba(0,0,0,0.1);
        }
        
        .person-dates {
            color: #6c757d;
            font-size: 0.95em;
            margin-bottom: 15px;
            font-weight: 500;
        }
        
        .person-link {
            display: inline-block;
            padding: 8px 16px;
            background: linear-gradient(45deg, #2196f3, #21cbf3);
            color: white;
            text-decoration: none;
            border-radius: 25px;
            font-size: 0.9em;
            font-weight: 600;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(33, 150, 243, 0.3);
        }
        
        .person-link:hover {
            background: linear-gradient(45deg, #1976d2, #1cb5e0);
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(33, 150, 243, 0.4);
            color: white;
        }
        
        /* SVG pour les connexions */
        .tree-connections {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 1;
            pointer-events: none;
        }
        
        .connection-path {
            fill: none;
            stroke: #2196f3;
            stroke-width: 3;
            stroke-linecap: round;
            opacity: 0.8;
            filter: drop-shadow(0 2px 4px rgba(33, 150, 243, 0.3));
        }
        
        .connection-arrow {
            fill: #2196f3;
            opacity: 0.9;
        }
        
        /* Animation des connexions */
        .connection-path {
            stroke-dasharray: 1000;
            stroke-dashoffset: 1000;
            animation: drawPath 2s ease-in-out forwards;
        }
        
        @keyframes drawPath {
            to {
                stroke-dashoffset: 0;
            }
        }
        
        /* Section des liens */
        .links-section {
            margin-top: 60px;
            padding: 30px;
            background: rgba(255, 255, 255, 0.9);
            border-radius: 20px;
            backdrop-filter: blur(10px);
            box-shadow: 0 8px 32px rgba(0,0,0,0.1);
        }
        
        .links-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
            margin-top: 20px;
        }
        
        .link-card {
            background: linear-gradient(145deg, #ffffff 0%, #f8f9fa 100%);
            border: 2px solid #e9ecef;
            border-radius: 15px;
            padding: 20px;
            text-align: center;
            transition: all 0.3s ease;
            position: relative;
        }
        
        .link-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
            border-color: #007bff;
        }
        
        .link-type-icon {
            font-size: 2.5rem;
            margin-bottom: 10px;
            display: block;
        }
        
        .link-type-name {
            font-size: 0.9rem;
            font-weight: 600;
            color: #6c757d;
            margin-bottom: 8px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
        
        .linked-person-name {
            font-size: 1.2rem;
            font-weight: 700;
            color: #2c3e50;
            margin-bottom: 10px;
        }
        
        .link-dates {
            font-size: 0.85rem;
            color: #6c757d;
            margin-bottom: 15px;
        }
        
        .link-card .person-link {
            padding: 6px 12px;
            font-size: 0.8rem;
        }
        
        /* Couleurs sp√©cifiques par type de lien */
        .link-card[data-type="conjoint"] { border-color: #28a745; }
        .link-card[data-type="conjoint"]:hover { border-color: #1e7e34; }
        .link-card[data-type="conjoint"] .link-type-icon { color: #28a745; }
        
        .link-card[data-type="ex-conjoint"] { border-color: #dc3545; }
        .link-card[data-type="ex-conjoint"]:hover { border-color: #c82333; }
        .link-card[data-type="ex-conjoint"] .link-type-icon { color: #dc3545; }
        
        .link-card[data-type="s√©par√©"] { border-color: #ffc107; }
        .link-card[data-type="s√©par√©"]:hover { border-color: #e0a800; }
        .link-card[data-type="s√©par√©"] .link-type-icon { color: #ffc107; }
        
        .link-card[data-type="compagnon"] { border-color: #17a2b8; }
        .link-card[data-type="compagnon"]:hover { border-color: #138496; }
        .link-card[data-type="compagnon"] .link-type-icon { color: #17a2b8; }
        
        .link-card[data-type="parrain"] { border-color: #6f42c1; }
        .link-card[data-type="parrain"]:hover { border-color: #5a32a3; }
        .link-card[data-type="parrain"] .link-type-icon { color: #6f42c1; }
        
        .link-card[data-type="marraine"] { border-color: #e83e8c; }
        .link-card[data-type="marraine"]:hover { border-color: #d91a72; }
        .link-card[data-type="marraine"] .link-type-icon { color: #e83e8c; }
        
        /* Responsive */
        @media (max-width: 768px) {
            .tree-level {
                flex-direction: column;
                align-items: center;
                gap: 20px;
            }
            
            .person-card {
                width: 250px;
            }
            
            .links-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Arbre g√©n√©alogique de {{ person.fullName }}</h1>
        <a href="{{ path('app_person_show', {'id': person.id}) }}" class="btn btn-primary">
            <i class="fas fa-arrow-left"></i> Retour aux d√©tails
        </a>
    </div>

    <div class="tree-container" id="tree-container">
        <!-- SVG pour les connexions -->
        <svg class="tree-connections" id="connections-svg">
            <defs>
                <marker id="arrowhead" markerWidth="10" markerHeight="7" 
                        refX="9" refY="3.5" orient="auto">
                    <polygon points="0 0, 10 3.5, 0 7" class="connection-arrow" />
                </marker>
            </defs>
        </svg>
        
        <div class="tree">
            {# Parents #}
            {% if person.father or person.mother %}
                <div class="tree-level" data-level="parents">
                    {% if person.father %}
                        <div class="person-card" data-person="father">
                            {% if person.father.photo %}
                                <img src="{{ person.father.photo }}" alt="{{ person.father.fullName }}" class="person-photo">
                            {% else %}
                                <img src="data:image/svg+xml;base64," alt="Photo par d√©faut" class="person-photo">
                            {% endif %}
                            <div class="person-name">{{ person.father.fullName }}</div>
                            {% if person.father.birthDate %}
                                <div class="person-dates">
                                    {{ person.father.birthDate|date('d/m/Y') }}
                                    {% if person.father.deathDate %}
                                        - {{ person.father.deathDate|date('d/m/Y') }}
                                    {% endif %}
                                </div>
                            {% endif %}
                            <a href="{{ path('app_person_show', {'id': person.father.id}) }}" class="person-link">Voir les d√©tails</a>
                        </div>
                    {% endif %}
                    {% if person.mother %}
                        <div class="person-card" data-person="mother">
                            {% if person.mother.photo %}
                                <img src="{{ person.mother.photo }}" alt="{{ person.mother.fullName }}" class="person-photo">
                            {% else %}
                                <img src="data:image/svg+xml;base64," alt="Photo par d√©faut" class="person-photo">
                            {% endif %}
                            <div class="person-name">{{ person.mother.fullName }}</div>
                            {% if person.mother.birthDate %}
                                <div class="person-dates">
                                    {{ person.mother.birthDate|date('d/m/Y') }}
                                    {% if person.mother.deathDate %}
                                        - {{ person.mother.deathDate|date('d/m/Y') }}
                                    {% endif %}
                                </div>
                            {% endif %}
                            <a href="{{ path('app_person_show', {'id': person.mother.id}) }}" class="person-link">Voir les d√©tails</a>
                        </div>
                    {% endif %}
                </div>
            {% endif %}

            {# Personne actuelle, fr√®res/s≈ìurs et liens #}
            <div class="tree-level" data-level="current">
                {% if person.siblings|length > 0 %}
                    {% for sibling in person.siblings %}
                        <div class="person-card" data-person="sibling">
                            {% if sibling.photo %}
                                <img src="{{ sibling.photo }}" alt="{{ sibling.fullName }}" class="person-photo">
                            {% else %}
                                <img src="data:image/svg+xml;base64," alt="Photo par d√©faut" class="person-photo">
                            {% endif %}
                            <div class="person-name">{{ sibling.fullName }}</div>
                            {% if sibling.birthDate %}
                                <div class="person-dates">
                                    {{ sibling.birthDate|date('d/m/Y') }}
                                    {% if sibling.deathDate %}
                                        - {{ sibling.deathDate|date('d/m/Y') }}
                                    {% endif %}
                                </div>
                            {% endif %}
                            <a href="{{ path('app_person_show', {'id': sibling.id}) }}" class="person-link">Voir les d√©tails</a>
                        </div>
                    {% endfor %}
                {% endif %}
                
                <div class="person-card current" data-person="current">
                    {% if person.photo %}
                        <img src="{{ person.photo }}" alt="{{ person.fullName }}" class="person-photo">
                    {% else %}
                        <img src="data:image/svg+xml;base64," alt="Photo par d√©faut" class="person-photo">
                    {% endif %}
                    <div class="person-name">{{ person.fullName }}</div>
                    {% if person.birthDate %}
                        <div class="person-dates">
                            {{ person.birthDate|date('d/m/Y') }}
                            {% if person.deathDate %}
                                - {{ person.deathDate|date('d/m/Y') }}
                            {% endif %}
                        </div>
                    {% endif %}
                    <a href="{{ path('app_person_show', {'id': person.id}) }}" class="person-link">Voir les d√©tails</a>
                </div>
                
                {# Liens de la table Lien au m√™me niveau - tri√©s par priorit√© #}
                {% set liens = person.tousLesLiens %}
                {% if liens|length > 0 %}
                    {# Trier les liens par ordre de priorit√© : conjoints/compagnons d'abord #}
                    {% set liensOrdonnes = [] %}
                    {% set prioriteOrdre = ['conjoint', 'compagnon', 'ex-conjoint', 's√©par√©', 'parrain', 'marraine', 'p√®re', 'm√®re', 'beau-p√®re', 'belle-m√®re', 'tuteur', 'tutrice'] %}
                    
                    {# Grouper les liens par type #}
                    {% for priorite in prioriteOrdre %}
                        {% for lien in liens %}
                            {% if lien.typeLien.nom|lower == priorite %}
                                {% set liensOrdonnes = liensOrdonnes|merge([lien]) %}
                            {% endif %}
                        {% endfor %}
                    {% endfor %}
                    
                    {# Ajouter les liens restants qui ne sont pas dans la liste de priorit√© #}
                    {% for lien in liens %}
                        {% set typeLienNom = lien.typeLien.nom|lower %}
                        {% if typeLienNom not in prioriteOrdre %}
                            {% set liensOrdonnes = liensOrdonnes|merge([lien]) %}
                        {% endif %}
                    {% endfor %}
                    
                    {% for lien in liensOrdonnes %}
                        {% set autrePerson = lien.getAutrePersonne(person) %}
                        {% set typeLienNom = lien.typeLien.nom|lower %}
                        <div class="person-card" data-person="link" data-type="{{ typeLienNom }}">
                            {# Ic√¥ne selon le type de lien en haut √† droite #}
                            <div style="position: absolute; top: 10px; right: 10px; font-size: 1.5rem;">
                                {% if typeLienNom == 'conjoint' %}
                                    üíñ
                                {% elseif typeLienNom == 'ex-conjoint' %}
                                    üíî
                                {% elseif typeLienNom == 's√©par√©' %}
                                    ‚è∏Ô∏è
                                {% elseif typeLienNom == 'compagnon' %}
                                    ü§ù
                                {% elseif typeLienNom == 'parrain' %}
                                    ‚úùÔ∏è
                                {% elseif typeLienNom == 'marraine' %}
                                    ‚úùÔ∏è
                                {% elseif 'p√®re' in typeLienNom or 'beau-p√®re' in typeLienNom %}
                                    üë®
                                {% elseif 'm√®re' in typeLienNom or 'belle-m√®re' in typeLienNom %}
                                    üë©
                                {% elseif 'tuteur' in typeLienNom %}
                                    üõ°Ô∏è
                                {% else %}
                                    üë•
                                {% endif %}
                            </div>
                            
                            {% if autrePerson.photo %}
                                <img src="{{ autrePerson.photo }}" alt="{{ autrePerson.fullName }}" class="person-photo">
                            {% else %}
                                <img src="data:image/svg+xml;base64," alt="Photo par d√©faut" class="person-photo">
                            {% endif %}
                            
                            <div class="person-name">{{ autrePerson.fullName }}</div>
                            <div class="person-dates" style="color: #007bff; font-weight: 600; font-size: 0.8rem; text-transform: uppercase;">
                                {{ lien.typeLien.nom }}
                            </div>
                            
                            {% if autrePerson.birthDate %}
                                <div class="person-dates">
                                    {{ autrePerson.birthDate|date('d/m/Y') }}
                                    {% if autrePerson.deathDate %}
                                        - {{ autrePerson.deathDate|date('d/m/Y') }}
                                    {% endif %}
                                </div>
                            {% endif %}
                            
                            <a href="{{ path('app_person_show', {'id': autrePerson.id}) }}" class="person-link">Voir les d√©tails</a>
                        </div>
                    {% endfor %}
                {% endif %}
            </div>

            {# Enfants #}
            {% if person.children|length > 0 %}
                <div class="tree-level" data-level="children">
                    {% for child in person.children %}
                        <div class="person-card" data-person="child">
                            {% if child.photo %}
                                <img src="{{ child.photo }}" alt="{{ child.fullName }}" class="person-photo">
                            {% else %}
                                <img src="data:image/svg+xml;base64," alt="Photo par d√©faut" class="person-photo">
                            {% endif %}
                            <div class="person-name">{{ child.fullName }}</div>
                            {% if child.birthDate %}
                                <div class="person-dates">
                                    {{ child.birthDate|date('d/m/Y') }}
                                    {% if child.deathDate %}
                                        - {{ child.deathDate|date('d/m/Y') }}
                                    {% endif %}
                                </div>
                            {% endif %}
                            <a href="{{ path('app_person_show', {'id': child.id}) }}" class="person-link">Voir les d√©tails</a>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        </div>

    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            drawConnections();
            
            // Redessiner les connexions lors du redimensionnement
            window.addEventListener('resize', function() {
                setTimeout(drawConnections, 100);
            });
        });

        function drawConnections() {
            const svg = document.getElementById('connections-svg');
            const container = document.getElementById('tree-container');
            
            // Vider les connexions existantes
            svg.innerHTML = `
                <defs>
                    <marker id="arrowhead" markerWidth="10" markerHeight="7" 
                            refX="9" refY="3.5" orient="auto">
                        <polygon points="0 0, 10 3.5, 0 7" class="connection-arrow" />
                    </marker>
                </defs>
            `;
            
            const containerRect = container.getBoundingClientRect();
            
            // Connexions parents -> personne actuelle
            const parentsLevel = document.querySelector('[data-level="parents"]');
            const currentLevel = document.querySelector('[data-level="current"]');
            const currentPerson = document.querySelector('[data-person="current"]');
            
            if (parentsLevel && currentPerson) {
                const parents = parentsLevel.querySelectorAll('.person-card');
                parents.forEach(parent => {
                    drawCurvedConnection(svg, parent, currentPerson, containerRect);
                });
            }
            
            // Connexions vers les enfants - avec gestion des parents multiples
            const childrenLevel = document.querySelector('[data-level="children"]');
            if (childrenLevel) {
                const children = childrenLevel.querySelectorAll('.person-card');
                children.forEach(child => {
                    // Trouver tous les parents potentiels de cet enfant au niveau actuel
                    const potentialParents = [];
                    
                    // Ajouter la personne actuelle
                    if (currentPerson) {
                        potentialParents.push(currentPerson);
                    }
                    
                    // Chercher les ex-conjoints, conjoints, s√©par√©s qui pourraient √™tre l'autre parent biologique
                    const linkedPersons = currentLevel.querySelectorAll('[data-person="link"]');
                    console.log('Personnes li√©es trouv√©es:', linkedPersons.length);
                    linkedPersons.forEach(linkedPerson => {
                        const linkType = linkedPerson.getAttribute('data-type');
                        const personName = linkedPerson.querySelector('.person-name')?.textContent;
                        console.log('Personne li√©e:', personName, 'Type:', linkType);
                        
                        // Seuls les ex-conjoints et s√©par√©s peuvent √™tre parents biologiques
                        // Les conjoints actuels et compagnons ne sont PAS automatiquement parents des enfants existants
                        if (linkType === 'ex-conjoint' || linkType === 's√©par√©') {
                            potentialParents.push(linkedPerson);
                            console.log('Ajout√© comme parent potentiel (ex-relation):', personName);
                        } else {
                            console.log('NON ajout√© comme parent (relation actuelle ou autre):', personName, linkType);
                        }
                        // Note: Les beaux-parents ne sont PAS automatiquement connect√©s aux enfants
                        // car ils ne sont pas forc√©ment les beaux-parents des enfants
                    });
                    
                    // Dessiner les connexions depuis tous les parents biologiques/adoptifs
                    console.log('Parents potentiels pour enfant:', potentialParents.length);
                    potentialParents.forEach(parent => {
                        console.log('Connexion parent vers enfant:', parent.querySelector('.person-name')?.textContent);
                        drawCurvedConnection(svg, parent, child, containerRect);
                    });
                });
            }
            
            // Connexions horizontales entre fr√®res et s≈ìurs
            if (currentLevel) {
                const siblings = currentLevel.querySelectorAll('[data-person="sibling"]');
                if (siblings.length > 0) {
                    // Ligne horizontale reliant tous les fr√®res et s≈ìurs + personne actuelle
                    const allSiblings = [...siblings, currentPerson];
                    drawSiblingsConnection(svg, allSiblings, containerRect);
                }
            }
            
            // Connexions horizontales entre conjoints/ex-conjoints (ligne de relation)
            if (currentLevel && currentPerson) {
                const linkedPersons = currentLevel.querySelectorAll('[data-person="link"]');
                linkedPersons.forEach(linkedPerson => {
                    const linkType = linkedPerson.getAttribute('data-type');
                    // Seules les relations conjugales ont des connexions horizontales
                    if (linkType === 'conjoint' || linkType === 'ex-conjoint' || linkType === 's√©par√©' || linkType === 'compagnon') {
                        drawRelationshipConnection(svg, currentPerson, linkedPerson, containerRect, linkType);
                    }
                    // Les beaux-parents n'ont PAS de connexion horizontale avec la personne actuelle
                    // car ils sont li√©s au p√®re/m√®re, pas directement √† la personne
                });
            }
        }

        function drawCurvedConnection(svg, fromElement, toElement, containerRect) {
            const fromRect = fromElement.getBoundingClientRect();
            const toRect = toElement.getBoundingClientRect();
            
            const fromX = fromRect.left + fromRect.width / 2 - containerRect.left;
            const fromY = fromRect.bottom - containerRect.top;
            const toX = toRect.left + toRect.width / 2 - containerRect.left;
            const toY = toRect.top - containerRect.top;
            
            const midY = fromY + (toY - fromY) / 2;
            
            // Cr√©er une courbe de B√©zier
            const path = document.createElementNS('http://www.w3.org/2000/svg', 'path');
            const pathData = `M ${fromX} ${fromY} 
                             C ${fromX} ${midY}, ${toX} ${midY}, ${toX} ${toY - 10}`;
            
            path.setAttribute('d', pathData);
            path.setAttribute('class', 'connection-path');
            path.setAttribute('marker-end', 'url(#arrowhead)');
            
            svg.appendChild(path);
        }

        function drawSiblingsConnection(svg, siblings, containerRect) {
            if (siblings.length < 2) return;
            
            const rects = siblings.map(sibling => sibling.getBoundingClientRect());
            const leftmost = Math.min(...rects.map(rect => rect.left));
            const rightmost = Math.max(...rects.map(rect => rect.right));
            const y = rects[0].top + rects[0].height / 2 - containerRect.top;
            
            // Ligne horizontale principale
            const mainLine = document.createElementNS('http://www.w3.org/2000/svg', 'line');
            mainLine.setAttribute('x1', leftmost - containerRect.left - 20);
            mainLine.setAttribute('y1', y);
            mainLine.setAttribute('x2', rightmost - containerRect.left + 20);
            mainLine.setAttribute('y2', y);
            mainLine.setAttribute('class', 'connection-path');
            mainLine.setAttribute('stroke-width', '2');
            
            svg.appendChild(mainLine);
            
            // Lignes verticales vers chaque fr√®re/s≈ìur
            siblings.forEach(sibling => {
                const rect = sibling.getBoundingClientRect();
                const x = rect.left + rect.width / 2 - containerRect.left;
                
